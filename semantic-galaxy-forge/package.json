{
  "name": "semantic-galaxy-forge",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:renderer": "cd renderer && npm run build",
    "build": "npm run build:renderer && electron-builder",
    "build:win": "npm run build:renderer && electron-builder -w",
    "build:mac": "npm run build:renderer && electron-builder -m",
    "build:linux": "npm run build:renderer && electron-builder -l",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  }
}
